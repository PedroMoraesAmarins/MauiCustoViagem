<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustoViagem.View.CriarPedagio"
             Title="CriarPedagio">
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Local:"/>
            <Entry BindingContext="local" x:Name="txt_local"/>

            <Label Text="Valor:"/>
            <Entry BindingContext="valor"  x:Name="txt_valor" />

            <Button Text="Adicionar" Margin="5" x:Name="btn_enviar" Clicked="btn_enviar_Clicked"/>
            <Button Text="Voltar" Margin="5" x:Name="btn_voltar" Clicked="btn_voltar_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>